#!/bin/bash
#
# Leonid Kogan <leon@leonsio.com>
# Yet Another Homematic Management 
#
# Network management script, create new bridges for lxc containers
#


# Stop on Errors
set -e

# Hilfe Output
show_help ()
{
cat << EOF
YAHM Network management script

Usage Example: 

./yahm-network [FLAG] COMMAND
./yahm-network -n mycccu -b mybridge attach

Flags:
-n          - LXC container name.
-f          - Force operation (no halt on errors).
-v          - Verbose output 
-b          - Bridge name

Commands:
create      -
delete      -
attach      -
dettach     -
show        -
EOF
exit 1
}
PARAMETER="b:wfvn:"

# Include laden
source /opt/YAHM/share/include.sh

show_bridges()
{
    local container=$?
}



if [[ $# != 1 ]]; then
    show_help
fi

for key in "$@"; do
    case $key in
        create)
            shift
            break;
        ;;
        attach)
            shift
            break;
        ;;
        deattach)
            shift
            break;
        ;;  
        delete)
            shift
            break;
        ;;
        show)
            show_bridges
            shift
            break;
        ;; 
        *)
            show_help
            exit 0
        ;;
    esac
done

